<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" prefHeight="504.0" prefWidth="656.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="de.bsommerfeld.randomizer.ui.view.controller.HomeViewController">
    <children>
        <!-- Main Content -->
        <VBox fx:id="mainContent" alignment="CENTER" prefHeight="504.0" prefWidth="656.0" styleClass="home-view"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <ImageView fitHeight="256.0" fitWidth="256.0" pickOnBounds="true" preserveRatio="true"
                           styleClass="home-view-image">
                    <image>
                        <Image url="@../../../images/homeView/randomizerLogo.png"/>
                    </image>
                </ImageView>
                <HBox alignment="CENTER" prefHeight="20.0" prefWidth="162.0" styleClass="home-view-socials-container">
                    <children>
                        <Label onMouseClicked="#onDiscordOpen" styleClass="home-view-discord" text="Discord">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Label>
                        <Label onMouseClicked="#onGitHubOpen" styleClass="home-view-github" text="GitHub">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Label>
                    </children>
                </HBox>
                <Button disable="true" mnemonicParsing="false" styleClass="home-view-hector" text="Coming Soon..."/>
            </children>
        </VBox>

        <!-- Releases Button -->
        <HBox fx:id="releasesButton" alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0"
              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              styleClass="release-bottom-bar" onMouseClicked="#onReleasesClick">
            <Label text="Releases" styleClass="releases-label"/>
        </HBox>

        <!-- Releases View (initially positioned below visible area) -->
        <VBox fx:id="releasesView" styleClass="releases-view"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0">
            <children>
                <!-- Header with back button -->
                <HBox styleClass="releases-header" onMouseClicked="#onBackClick">
                    <children>
                        <Label text="Back" styleClass="releases-back-label">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Label>
                        <Label text="Releases" styleClass="releases-title"/>
                    </children>
                </HBox>

                <!-- Releases Table Container - fills remaining space -->
                <HBox fx:id="releasesTableContainer" styleClass="releases-table-container" VBox.vgrow="ALWAYS">
                    <children>
                        <!-- Left Column: Release List - fixed width -->
                        <VBox fx:id="releasesListContainer" styleClass="releases-list-container" prefWidth="280.0"
                              minWidth="280.0" maxWidth="280.0">
                            <children>
                                <ScrollPane styleClass="releases-list-scroll" fitToWidth="true" hbarPolicy="NEVER"
                                            vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                                    <VBox fx:id="releasesListContent" styleClass="releases-list-content">
                                        <!-- Release entries will be added dynamically here -->
                                    </VBox>
                                </ScrollPane>
                            </children>
                        </VBox>

                        <!-- Right Column: Changelog Display - takes remaining space -->
                        <VBox fx:id="changelogContainer" styleClass="changelog-container" HBox.hgrow="ALWAYS">
                            <children>
                                <Label fx:id="changelogTitle" text="WÃ¤hlen Sie ein Release aus"
                                       styleClass="changelog-title"/>
                                <ScrollPane fx:id="changelogScrollPane" styleClass="changelog-scroll" fitToWidth="true"
                                            hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                                    <VBox fx:id="changelogContent" styleClass="changelog-content">
                                        <children>
                                            <Label fx:id="changelogText"
                                                   text="Klicken Sie auf ein Release links, um die Changelog-Details zu sehen."
                                                   styleClass="changelog-placeholder" wrapText="true"/>
                                        </children>
                                    </VBox>
                                </ScrollPane>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>