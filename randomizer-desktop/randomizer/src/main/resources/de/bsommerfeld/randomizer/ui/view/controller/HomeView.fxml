<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" prefHeight="504.0" prefWidth="656.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="de.bsommerfeld.randomizer.ui.view.controller.HomeViewController">
    <children>
        <!-- Main Content -->
        <VBox fx:id="mainContent" alignment="CENTER" prefHeight="504.0" prefWidth="656.0" styleClass="home-view"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <ImageView fitHeight="256.0" fitWidth="256.0" pickOnBounds="true" preserveRatio="true"
                           styleClass="home-view-image">
                    <image>
                        <Image url="@../../../images/homeView/randomizerLogo.png"/>
                    </image>
                </ImageView>
                <HBox alignment="CENTER" prefHeight="20.0" prefWidth="162.0" styleClass="home-view-socials-container">
                    <children>
                        <Label onMouseClicked="#onDiscordOpen" styleClass="home-view-discord" text="Discord">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Label>
                        <Label onMouseClicked="#onGitHubOpen" styleClass="home-view-github" text="GitHub">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Label>
                    </children>
                </HBox>
                <Button disable="true" mnemonicParsing="false" styleClass="home-view-hector" text="Coming Soon..."/>
            </children>
        </VBox>

        <!-- Releases Button -->
        <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0"
              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              styleClass="release-bottom-bar" onMouseClicked="#onReleasesClick">
            <Label text="Releases" styleClass="releases-label"/>
        </HBox>

        <!-- Releases View (initially positioned below visible area) -->
        <VBox fx:id="releasesView" styleClass="releases-view"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <!-- Header with back button -->
                <HBox styleClass="releases-header">
                    <children>
                        <Button fx:id="backButton" text="← Zurück" styleClass="releases-back-button"
                                onAction="#onBackClick">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>
                        <Label text="Releases" styleClass="releases-title"/>
                    </children>
                </HBox>

                <!-- Content Area - Template for now -->
                <VBox styleClass="releases-content">
                    <children>
                        <Label text="Releases Content" styleClass="releases-placeholder"/>
                        <Label text="Hier wird später die Releases-Tabelle implementiert"
                               styleClass="releases-placeholder-sub"/>

                        <!-- Placeholder for future table -->
                        <VBox styleClass="releases-table-placeholder">
                            <children>
                                <HBox styleClass="releases-table-header">
                                    <children>
                                        <Label text="Version" styleClass="releases-table-header-cell"/>
                                        <Label text="Datum" styleClass="releases-table-header-cell"/>
                                        <Label text="Download" styleClass="releases-table-header-cell"/>
                                    </children>
                                </HBox>
                                <VBox styleClass="releases-table-rows">
                                    <children>
                                        <HBox styleClass="releases-table-row">
                                            <children>
                                                <Label text="v1.0.0" styleClass="releases-table-cell"/>
                                                <Label text="01.06.2025" styleClass="releases-table-cell"/>
                                                <Button text="Download" styleClass="releases-download-button"
                                                        disable="true"/>
                                            </children>
                                        </HBox>
                                        <HBox styleClass="releases-table-row">
                                            <children>
                                                <Label text="v0.9.0" styleClass="releases-table-cell"/>
                                                <Label text="15.05.2025" styleClass="releases-table-cell"/>
                                                <Button text="Download" styleClass="releases-download-button"
                                                        disable="true"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>